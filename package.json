{
	"name": "@creditiq/set-project-references",
	"description": "Set project references for TypeScript",
	"keywords": [
		"TypeScript",
		"Project References",
		"monorepo"
	],
	"version": "0.0.7",
	"author": "Anton Bessonov",
	"main": "./dist/index.js",
	"license": "MIT",
	"repository": "creditiq/set-project-references",
	"sideEffects": false,
	"scripts": {
		"start": "ts-node ./src/index.ts",
		"debug": "node --inspect-brk -r ts-node/register ./src/index.ts",
		"build": "tsc --build",
		"cli": "node ./dist/index.js",
		"lint": "eslint . --ext .ts,.js",
		"test": "jest --coverage",
		"precommit": "pnpm run test && pnpm run lint && pnpm run build",
		"preversion": "npm run precommit",
		"update": "pnpm update --interactive --recursive --recursive"
	},
	"bin": {
		"set-project-references": "./dist/index.js"
	},
	"dependencies": {
		"commander": "4.0.1",
		"detect-indent": "6.0.0",
		"glob": "7.1.6",
		"js-yaml": "3.13.1",
		"lodash": "4.17.19"
	},
	"devDependencies": {
		"@types/glob": "7.1.1",
		"@types/jest": "25.1.2",
		"@types/js-yaml": "3.12.2",
		"@types/lodash": "4.14.149",
		"@types/node": "12.12.11",
		"@typescript-eslint/eslint-plugin": "2.8.0",
		"@typescript-eslint/parser": "2.8.0",
		"eslint": "6.7.0",
		"eslint-config-airbnb-base": "14.0.0",
		"eslint-plugin-import": "2.18.2",
		"jest": "25.1.0",
		"ts-jest": "25.2.0",
		"ts-node": "8.5.2",
		"typescript": "3.8.2"
	},
	"publishConfig": {
		"access": "public"
	}
}
